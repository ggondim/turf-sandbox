{
  "extends": ["standard", "standard-react"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "indent": [2, 4],
    "no-else-return": 1,
    "comma-dangle": [1, "always-multiline"],
    "semi": [2, "always"],
    "react/jsx-indent": [2, 4],
    "react/jsx-indent-props": 0,
    "consistent-return": 2,
    "react/prop-types": 1,
    "react/jsx-uses-react": "error",
    "jsx-quotes": [2, "prefer-double"],
    "react/jsx-uses-vars": "error"
  },
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
